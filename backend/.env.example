# Post-Facto Coding Review MVP - Environment Configuration

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/revrx_db

# Application
APP_ENV=development
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=8000
SECRET_KEY=your-secret-key-change-in-production

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET_NAME=revrx-uploads
AWS_S3_ENCRYPTION=AES256

# Amazon Comprehend Medical
AWS_COMPREHEND_MEDICAL_REGION=us-east-1

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.3

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_ID_MONTHLY=price_your_monthly_price_id

# Email Configuration (Resend)
RESEND_API_KEY=re_your_resend_api_key
FROM_EMAIL=noreply@yourdomain.com

# Redis (for Celery)
REDIS_URL=redis://localhost:6379/0

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# File Upload Limits
MAX_FILE_SIZE_MB=5
MAX_FILES_PER_ENCOUNTER=2

# HIPAA Compliance
PHI_ENCRYPTION_KEY=your-phi-encryption-key-32-bytes
DATA_RETENTION_DAYS=2555  # 7 years for HIPAA compliance

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Monitoring
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn-optional
